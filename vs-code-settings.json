{
    "latex-workshop.view.pdf.viewer": "tab",
    "python.linting.pycodestyleEnabled": false,
    "editor.minimap.enabled": false,
    "python.linting.pycodestyleArgs": ["--max-line-length=120"],
    "python.linting.pylintEnabled": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.wrappingIndent": "indent",
    "editor.renderWhitespace": "all",
    "files.associations": {
        "*.yaml.template": "yaml",
        "Dockerfile*": "dockerfile"
    },
    "explorer.confirmDragAndDrop": false,
    "python.testing.pytestEnabled": true,
    "terminal.integrated.inheritEnv": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/opt/homebrew/bin/black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120"
    ],
    "python.linting.flake8Path": "/opt/homebrew/bin/flake8",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    "editor.fontSize": 14,
    "explorer.confirmDelete": false,
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "workbench.colorTheme": "Monokai",
    "editor.suggestSelection": "first",
    "autoDocString.docstringFormat": "google",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": false
    },
    "python.defaultInterpreterPath": "/opt/homebrew/Caskroom/mambaforge/base/bin/python",
    "jupyter.askForKernelRestart": false,
    "cSpell.userWords": [
        "autoupdate",
        "buildx",
        "conda",
        "dataframe",
        "dataframes",
        "distroless",
        "docai",
        "fsspec",
        "ipynb",
        "lockfiles",
        "mambaforge",
        "quantco",
        "QUETZ",
        "randint",
        "Streamlit",
        "Tesseract",
        "tqdm",
        "unittests",
        "unshallow",
        "withdirs"
    ],
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "[python]": {
        "editor.formatOnType": true
    },
    "redhat.telemetry.enabled": false,
    "terminal.external.osxExec": "Warp.app"
}
